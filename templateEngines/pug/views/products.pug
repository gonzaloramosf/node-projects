doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Products
    body
        a(href='/api/') click to add product
        if hasAny
            each product in products
                p= product.title
                p= product.price
                br
        unless hasAny
            p No products added!
